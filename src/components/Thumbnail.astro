---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<div>
  <a href={href}><span>{title}</span></a>
</div>


<style>
    div {
       padding: 0;
       margin: 0; 
    }
    a {
        width: 100%;
        text-decoration: none;
        color: #000;
        font-size: 2rem;
        font-weight: 500;
        filter: blur(1.3px);
    }
</style>