---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<div>
  <a href={href}>{title}</a>
</div>

<style>
  div {
    padding: 0;
    margin: 0;
    text-align: center;
    display: flex;
    align-items: center;
  }
  a {
    width: 100%;
    text-decoration: none;
    color: #000;
    font-size: 2rem;
    font-weight: 500;

    text-align: center;
  }
</style>
