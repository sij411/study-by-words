---
interface Props {
  title: string;
  href: string;
}

const { href, title } = Astro.props;
---

<div>
  <a href={href}>{title}</a>
</div>


<style>
    div {
       padding: 0;
       margin: 0; 
       text-align: center;
       display: flex;
       align-items: center;
    }
    a {
        width: 100%;
        text-decoration: none;
        color: #000;
        font-size: 2rem;
        font-weight: 500;
        filter: blur(1.3px);
        text-align: center;
    }
</style>